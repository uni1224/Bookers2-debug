<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info',user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @user.get_profile_image(100,100) %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
           <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
           <% end %>
           <td>
　　<% if @book.category.present? %>
　　　　<%=link_to@book.category,tagsearches_search_path(content:@book.category)%>
　　<% end %>
</td>
               
            <div>
         <td class=<%= "favorite-" + @book.id.to_s %> >
            <%= render "favorites/btn", book: @book %>
        </td>
  <td>コメント件数：<%= @book.book_comments.count %></td>
  <td class="view-count">閲覧数: <%= @book.view_counts.count %></td>
<td><%= render "static.rate", book: @book %></td>
      
  
  </div>
</div>
          
          
        </tr>
      </table>
 <div id="comments-area"><%= render "book_comments/comment",book: @book,book_comment: @book_comment %></div>

      
   </div>
  </div>
</div>