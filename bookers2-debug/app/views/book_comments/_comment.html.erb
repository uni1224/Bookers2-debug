
<% book.book_comments.each do |book_comment| %>
    <p><%= image_tag book_comment.user.get_profile_image(100,100) %></p>
    <%= book_comment.user.name %>
    <%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %>
     <% if book_comment.user == current_user %>
      <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true,  class: "btn btn-sm btn-danger" %>
    <% end %>
  <% end %>

      <div>
 <%= form_with(model:[book, book_comment], local: false) do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに",class: "comment-textarea" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>