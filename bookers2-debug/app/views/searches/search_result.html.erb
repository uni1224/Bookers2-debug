<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
  <thead>
    <tr>
      <th></th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
           <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= link_to user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
         <td><%= image_tag book.user.get_profile_image(100,100) %></td>
        <td><%= link_to book.title,book %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>